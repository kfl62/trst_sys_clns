  daily = locals[:daily]
  today = Date.today;   cols = 0
  y   = params[:p_y].nil? ? today.year  : params[:p_y].to_i
  m   = params[:p_m].nil? ? today.month : params[:p_m].to_i
  d   = params[:p_d].nil? ? 0 : params[:p_d].to_i

