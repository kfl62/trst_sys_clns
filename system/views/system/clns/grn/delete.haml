:ruby
  firm = Clns::PartnerFirm.find_by(firm: true)
%span#hidden_data{data: {dialog: "delete",model_name: mat(@object,@object.id_intern == true ? 'model_name_id_intern' : 'model_name'),oid: @object.id,js_ext: 'desk_grn'}}
%article#xhr_info.warning
  %i.fa.fa-fa-exclamation-triangle.fa-lg
  = t('intro.delete.desk_delivery_note',data: mat(@object,'model_name'))
%form{action: "/sys/#{@path}", method: "delete"}
  %table
    %thead
      %tr.pdb-05
        %td{colspan: '7'}
          %detail.detail.w-45rem
            %i.fa.fa-bomb.fa-lg.red
            = t('intro.show.desk_grn',id_date: l(@object.id_date,format: :trst),unit: firm.units.find(@object.unit_id).name[1],signed_by: @object.signed_by.name,supplr: @object.supplr.name[2], supplr_d: (@object.supplr_d.name rescue 'Anonymous'))
    = partial "/#{@path}/show"
    %tfoot
      %tr
        - td_buttonset(['delete','cancel'],{style: 'ta-ce'},'7')

