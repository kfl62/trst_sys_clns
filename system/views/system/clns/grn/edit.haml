%span#hidden_data.hidden{data: {dialog: "edit",model_name: mat(@object,'model_name'),oid: @object.id,js_ext: 'desk_grn'}}
%form{action: "/sys/#{@path}", method: "put"}
  %table{:cellspacing => "0"}
    %thead
      %tr
        %td{colspan: @object.id_intern == true ? '5' : '6'}
          - label_for @object, 'doc_name'
          - input_for @object, 'doc_name'
      %tr.pdb-05
        %td{colspan: @object.id_intern == true ? '5' : '6'}
          - input_for @object, 'expl', {style: 'ui-state-default width-450'}
    = partial "#{@path}/show"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: @object.id_intern == true ? '5' : '6'}
          %button{type: "button", data: {action: "save",  icon: "disk",remove: 'false'}}= t('button.save')
          %button{type: "button", data: {action: "cancel",icon: "circle-close"}}= t('button.cancel')
