%span#hidden_data{data: {dialog: "edit",model_name: mat(@object,'model_name'),oid: @object.id,js_ext: 'desk_csorting'}}
%form{action: "/sys/#{@path}", method: "put"}
  %table
    %thead
      %tr.pdb-05
        %td{colspan: '6'}
          - label_for @object, 'name'
          - input_for @object, 'name'
      %tr.pdb-05
        %td{colspan: '6'}
          - label_for @object, 'expl'
          - input_for @object, 'expl', {style: 'ui-state-default w-45rem'}
    = partial "#{@path}/show"
    %tfoot
      %tr
        - td_buttonset(['save','cancel'],{style: 'ta-ce'},'6')
