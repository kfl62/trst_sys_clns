%span#hidden_data.hidden{data: {dialog: "show",model_name: mat(@object,'model_name'),oid: @object.id,js_ext: 'desk_sorting'}}
%form{action: "/sys/#{@path}",method: "get"}
  %table{cellspacing: "0"}
    %thead
      %tr.pdb-05
        %td{colspan: "6"}
          %span.info.width-350.ju= t('intro.show.desk_sorting',id_date: l(@object.id_date,format: :trst),unit: @object.unit.name[1],signed_by: @object.signed_by.name,expl: @object.expl)
    = partial "#{@path}/show"
    %tfoot
      %tr
        %td.buttonset.ce{colspan: "6"}
          - if @object.from_freights.count == 0
            %button{type: "button",data: {action: "delete",icon: "circle-minus",type: 'delete'}}= t('button.delete')
          - else
            %button{type: "button",data: {action: "print",icon: "print"}}= t('button.print')
            - if @current_user.admin?
              %button{type: "button", data: {action: "edit",   icon: "document",remove: 'false'}}=     t('button.edit')
            %button{type: "button",data: {action: "delete",icon: "circle-minus",remove: 'false'}}= t('button.delete')
            %button{type: "button",data: {action: "cancel",icon: "circle-close"}}= t('button.cancel')
