%span#hidden_data{data: {dialog: "show",model_name: mat(@object,'model_name'),oid: @object.id,js_ext: 'desk_sorting'}}
%form{action: "/sys/#{@path}",method: "get"}
  %table
    %thead
      %tr.pdb-05
        %td{colspan: '6'}
          %detail.detail.w-45rem
            %i.fa.fa-info-circle.fa-lg.blue
            = t('intro.show.desk_sorting',id_date: l(@object.id_date,format: :trst),unit: @object.unit.name[1],signed_by: @object.signed_by.name,expl: @object.expl)
    = partial "#{@path}/show"
    %tfoot
      %tr
        - if @object.from_freights.count == 0
          - td_buttonset(['delete'],{style: 'ta-ce'},'6')
        - else
          - if @current_user.admin?
            - td_buttonset(['print','edit','delete','cancel'],{style: 'ta-ce'},'6')
          - else
            - td_buttonset(['print','delete','cancel'],{style: 'ta-ce'},'6')
