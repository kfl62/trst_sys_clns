- @object.reload
- if @object.freights.count > 0
  %tbody.inner
    %tr
      - mat(@object,'table_header_show').each do |label|
        %td.ce= label
    - @object.reload; @object.freights.each do |o|
      %tr
        - td_value_for  o, 'freight',   {order: 'name',style: 'name',nested: 'doc_dln'}
        - td_value_for  o, 'um',        {style: 'um',nested: 'doc_dln'}
        - td_value_for  o, 'pu',        {style: 'pu',precision: 4,nested: 'doc_dln'}
        - td_value_for  o, 'qu',        {style: 'qu',nested: 'doc_dln'}
        - td_value_for  o, 'val',       {style: 'val',nested: 'doc_dln'}
    %tr
      %td.ce.st{colspan: '4'}
        %span Total
      %td
        %span.val= "%.2f" % @object.freights.sum(:val)
- else
  %tbody
    %tr.pdb-05
      %td
        %span.warning.width-450.ju= t('msg.no_freight_selected')
